<% content_for :sub_actions do %>
  <%= sub_toolbar do %>
    <%= back_action(projects_path) %>
    <% if is_user_leader(@project, current_user) %>
      <%= edit_action(edit_project_path(@project), {"original-title" => "Edit workspace"} ) %>
      <%= assign_action(assign_project_path(@project), {"original-title" => "Assign users to workspace"} ) %>
      <%= delete_action(@project, { :confirm => "Are you sure you want to delete this project?\nAll associated experiments will also be deleted.", "original-title" => "Delete workspace" }) %>
    <% end %>
  <% end %>
<% end %>

<% content_for :content do %>
  <div class="profile" summary="Profile information">
    <div class="main">
      <h1>
        <img align="center" alt="jmartins" class="profile-project" width="50" height="50" src="<%= project_logo_path(@project) %>">
      </h1>
    </div>
    <div class="sidebar round">
      <p>
	<b>Name:</b>
	<%= @project.name %>
      </p>

	<b>URL:</b>
	<%= link_to project_path(@project), project_path(@project) %>
      </p>

      <p>
	<b>Description:</b>
	<%= @project.description %>
      </p>

      <%= render :partial => 'users', :locals => { :grid => false, :search => false, :title => "Users:", :with_assignment_check => false, :disabled => true, :make_leader => true, :users => @project.users } %>

    <% if @experiments.size > 0 %>
    <p class="table-title">
      <b>Experiments: </b>
    </p>
    <% end %>
    <% if !project_is_user_assigned?(@project, current_user.id) %>
      <div class="table-top-action<%= @experiments.size == 0 ? " left" : "" %>"><%= new_action(new_experiment_path(:reset => 1), {"original-title" => "New Experiment"} ) %></div>
    <% end %>
    <% if @experiments.size > 0 %>
      <%= render :partial => 'experiments'  %>
    <% end %>
    </div>
    </div>
<% end %>

<% content_for :footer do %>
<%= modal_dialog("", "modal-dialog") %>
<% end %>
