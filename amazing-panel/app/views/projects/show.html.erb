<% content_for :sub_actions do %>
  <%= sub_toolbar do %>
    <%= back_action(projects_path) %>
    <% if is_user_leader(@project, current_user) %>
      <%= edit_action(edit_project_path(@project)) %>
      <%= assign_action(assign_project_path(@project)) %>
      <%= delete_action(@project, { :confirm => "Are you sure?" }) %>
    <% end %>
  <% end %>
<% end %>

<% content_for :content do %>
  <div class="profile" summary="Profile information">
    <div class="main">
      <h1>
        <img align="center" alt="jmartins" class="project" width="50" height="50" src="<%= project_logo_path(@project) %>">
      </h1>
    </div>
    <div class="sidebar round">
      <p>
	<b>Name:</b>
	<%= @project.name %>
      </p>

      <p>
	<b>Description:</b>
	<%= @project.description %>
      </p>

      <%= render :partial => 'users', :locals => { :title => "Users:", :with_assignment_check => false, :disabled => true, :make_leader => true, :users => @project.users } %>
    </div>
<% end %>
