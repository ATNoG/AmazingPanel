<% if @error.nil? %>
function experiment_stat(){
  $.getScript("<%= stat_experiment_path(:id => params[:id], :format => :js) %>");
}
$("#error-experiment").addClass("hidden");
$("#caption-experiment").show();
$(".image-progress").show();
setTimeout(experiment_stat,5000);
<% else %>
  $("#caption-experiment > .text").html(<%= escape_javascript("<p class=\"info\">#{@error}</p>") %>);
<% end %>
