<% creator = @experiment.user %>
<% project = @experiment.project %>

<div class="branch-info">
  <% options = { :id => "new-branch-form" } %>
  <%= form_tag(clone_experiment_branch_path(:experiment_id => @experiment.id), options) do %>
    <b>Branch:</b>
    <%= select_tag "parent", options_for_select(@experiment.branches, @experiment.current) %>
    <%= commit_branch_image_link %>
    <%= new_branch_image_link %>    
    <% end %>
</div>

<p>
  <b>Creator:</b>
  <%= link_to creator.name, user_path(:id => creator.id) %>
</p>

<p>
  <b>Workspace:</b>
  <%= add_image_action(project_path(project), project_logo_path(project), project.name, { :link => true } ) %>
</p>

<p>
  <b>Duration:</b>
  <%= @experiment.duration %>
</p>

<p class="ed-description">
  <b>Description:</b>
  <%= @experiment.ed.description %>
</p>

<p>
  <b>Runs:</b>
  <%= @experiment.runs %>
</p>
