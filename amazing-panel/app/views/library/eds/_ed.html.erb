  <% creator = User.find(@ed.user_id) %>
  <% code = @content.readlines %>
  <p>
    <b>Creator:</b>
    <%= link_to creator.name, user_path(:id => creator.id) %>
  </p>

  <p>
    <b>Name:</b>
    <%= @ed.name %>
  </p>

  <p>
    <b>Description:</b>
    <%= @ed.description %>
  </p>        

  <p>
    <%= text_area_tag :code, code, :size => '60x30' %> 
  </p>        
