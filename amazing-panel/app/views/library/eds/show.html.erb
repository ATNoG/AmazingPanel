<% content_for :head do %>
  <%= javascript_include_tag 'codemirror/base/codemirror' %>  
<% end %>

<% content_for :sub_actions do %>
  <% sub_toolbar do %>
    <%= back_action(eds_path) %>
    <% if (current_user.admin? or current_user.id == @ed.user_id) %>
      <%= edit_action(edit_ed_path(@ed)) %>
      <%= delete_action(eds_path) %>
    <% end %>
  <% end %>
<% end %>

<% content_for :content do %>
  <%= render @ed %>  
<% end %>
