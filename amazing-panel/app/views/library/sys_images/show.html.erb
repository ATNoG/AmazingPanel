<% creator = User.find(@sys_image.user_id) %>

<% content_for :sub_actions do %>
  <ul id="toolbar-action-list">
    <li class="action">
      <%= link_to (edit_sys_image_path(@sys_image), :class => "action")  do %>
	Edit
	<%= image_tag "edit.png", {:height => 16, :width => 16} %>
      <% end %> 
    </li>
    <li class="action">
      <%= link_to(sys_images_path, :class => "action") do %>
	Back
	<%= image_tag "back.png", {:height => 16, :width => 16} %>
      <% end %> 
    </li>
    <li class="action">
      <%= link_to(sys_image_path(@sys_image), :class => "action", :method => "delete") do %>
	Delete
	<%= image_tag "remove.png", {:height => 16, :width => 16} %>
      <% end %> 
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <p>
    <b>Creator:</b>
    <%= link_to creator.name, user_path(:id => creator.id) %>
  </p>

  <p>
    <b>Name:</b>
    <%= @sys_image.name %>
  </p>

  <p>
    <b>Description:</b>
    <%= @sys_image.description %>
  </p>
  
  <p>
    <b>Kernel Version / Operating System:</b>
    <%= @sys_image.kernel_version_os %>
  </p>

  <p>
    <b>Size (bytes):</b>
    <%= @sys_image.size %>
  </p>

  <p>
    <b>Is a baseline Image? </b>
    <%= @sys_image.baseline ? "Yes." : "No." %>
  </p>

  <% if @sys_image.sys_image_id.nil? == false %>
  <p>
    <b>Baseline Image: </b>
    <%= link_to SysImage.find(@sys_image.sys_image_id).name, sys_image_path(:id => @sys_image.sys_image_id) %>
  </p>
  <% end %>

<% end %>