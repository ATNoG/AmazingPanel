<% content_for :main_content do %>
  <div id="toolbar">
    <ul id="toolbar-action-list">
        <%= add_action 'Experiment Definitions', eds_path, ['library/eds'] %>
	<%= add_action 'System Images', sys_images_path, ['library/sys_images'] %>
    </ul>
  </div>
  <div id="sub-toolbar">
    <%= yield :sub_actions %>
  </div>
  
  <br />
  <div id="file-show">
    <%= yield :content %>
  </div>

  <div class="clear"></div>
<% end %>

<%= render :template => 'layouts/application' %>
