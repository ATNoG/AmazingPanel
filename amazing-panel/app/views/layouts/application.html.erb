<!DOCTYPE html>
<html>
<head>
  <title>AMazINg Panel</title>
  <%= stylesheet_link_tag :all, :media => 'all' %>  
  <%= stylesheet_link_tag "/stylesheets/custom.css?c="+self.request.parameters[:controller]+"&a="+self.request.parameters[:action]+"&p="+self.request.headers["PATH_INFO"], :media => 'all' %>
  <%= javascript_include_tag :defaults %>    
  <%= javascript_include_tag "/javascripts/application.js?c="+self.request.parameters[:controller]+"&a="+self.request.parameters[:action]+"&p="+self.request.headers["PATH_INFO"] %>
  <%= yield :head %>

  <%= csrf_meta_tag %>
</head>
<body>
    <div class="overlay"></div>
    <div id="top-border"></div>
    <div id="header">      
      <a id="logo" href="http://amazing.hng.av.it.pt" title="Home"></a>
      <div id="omni-box" class="fixed-width">
	  <ul id="omni-global">
        <% if user_signed_in? %>
          <%= add_omni_action(gravatar_for(current_user)+"Profile", user_path(current_user.id), {}, {:action_class => [current_user_page, "omni-item-root"] }) %>
          <%= add_omni_action("Sign Out", destroy_user_session_path, {:controller => "users/sessions", :action => "destroy"}) %>
	    <% else %>
          <%= add_omni_action("Sign In", new_user_session_path, {:controller => "users/sessions", :action => "new"}, {:action_class => ["omni-item-root"]}) %>
          <%= add_omni_action("Sign Up", new_user_registration_path, {:controller => "users/registrations", :action => "new"}) %>
	    <% end %>
	  </ul>
      </div>
    </div>
    
    <% if user_signed_in? %>
      <div id="nav-global">
	<div id="nav-container">
      <ul id="menu-global">
          <%= add_nav_action(image_tag("home-icon-2.png", :align => "middle"), root_path, {:controller => "pages"}, {:action_class => ["home-item"]}) %>
          <%= add_nav_action("Testbeds", testbeds_path, {:controller => "testbeds"}) %>
          <%= add_nav_action("Experiments", experiments_path, {:controller => "experiments"}) %>
          <%= add_nav_action("Projects", projects_path, {:controller => "projects"}) %>
          <%= add_nav_action("Library", library_index_path, {:controller => ["library/library", "library/eds", "library/sys_images"]}) %>
          <% if current_user.admin? %>
            <%= add_nav_action("Admin", admin_admin_index_path, {:controller => ["admin/admin", "admin/users", "admin/eds", "admin/sys_images", "admin/registrations", "admin/testbeds"]}) %>
	    <% end%>
	  </ul>
	</div>
      </div>
    <% end %>
    <div id="main-section">
      <div class="container">
	  <% flash.each do |key, value| %>
    	  <p class="<%= user_signed_in? ? "flash-msg-integrated  #{key}" : key %>">
            <%= value %>
          </p>
    	<% end %>
	<%= yield(:main_content) %>
	<%= yield %>
      </div>  
    </div>
    
    <div id="footer">
    </div>
    <%= yield(:footer) %>
</body>
</html>
