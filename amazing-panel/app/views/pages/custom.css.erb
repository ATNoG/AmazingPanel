/** Modal Dialog From Scratch 
  * Filters
  */
.overlay {
  display: none;
  position:absolute;
  width: 100%;
  height: 100%;
  background-color:#000;  
  opacity: 0.6;
  filter: alpha(opacity=60);  
  z-index: 1;
  left: 0;
  top: 0;
}

.modal {
  visibility: hidden;
  display: inline;
  position: absolute;
  height: 100%;
  top: 50%;
  left: 30%;  
  z-index: 2;
  width: 30%;
  height: 300px;
  background-color: rgba(82, 82, 82, 0.699219);
  padding:10px;
  /*padding-left: 5px;*/
  -moz-border-radius: 8px;
  -webkit-border-radius: 8px;
  border-radius: 8px;  
}

.modal-container {
  background-color: white;
  height: 223px;
  overflow: auto;
}

.modal-actions {  
  padding-top: 10px;
  padding-right: 10px;
  background-color: #f0f0f0;
  cursor: pointer;
  height: 30px;
  border: 1px solid #d1d1d1;
}

