<% params.merge!(Rails.application.routes.recognize_path(params[:p])) %>
.testbed {  
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-origin: content-box;
  width: 600px;
  height: 600px;
}

.node {
  text-align: center;
  color: white;
  position: relative;
  width: 20px;
  height: 20px;
  background-color: gray;
  float:left;
<% if selectable %>
  opacity: 0.9;
<% end %>
}

.off {
  background-color: #ff6347;
}

.run {
  background-color: #32cd32;
}
.toggle {
  background-color:  #ffd700;
}
<% if selectable %>
.node:hover {
  opacity: 1;
  cursor: pointer;
  border: 2px solid #2e2e2e;
  margin: -2px;
}

.node-active {
  opacity: 1;
  margin: -2px;
  border: 2px solid black;
}
<% end %>
<% if toggleable %>
.node-selected {
  opacity: 1;
  margin: -2px;
  border: 2px solid black;
}
<% end %>
