<% creator = User.find(@sys_image.user_id) %>
<% render 'sidebar' %>

<% content_for :content do %>
  <p>
    <b>Name:</b>
    <%= @sys_image.name %>
  </p>

  <p>
    <b>Description:</b>
    <%= @sys_image.description %>
  </p>
  
  <p>
    <b>Kernel Version / Operating System:</b>
    <%= @sys_image.kernel_version_os %>
  </p>

  <p>
    <b>Size (bytes):</b>
    <%= @sys_image.size %>
  </p>

  <% if @sys_image.sys_image_id.nil? == false %>
  <p>
    <b>Baseline Image: </b>
    <% link_to @sys_image.sys_image_id.name, admin_sys_image_path(:id => @sys_image.sys_image_id) %>
  </p>
  <% end %>

<% end %>

<% content_for :actions do %>
  <%= add_action 'Edit', edit_sys_image_path(@sys_image) %>
<% end %>