<% params.merge!(Rails.application.routes.recognize_path(params[:p])) %>

#testbeds {
  left: -130px;
}

.testbed-legend {
  position: absolute;
  width: 100px;
  border: 1px solid #a4a4a4;
  left: -100px;
}

.testbed-legend > p {
  padding-bottom: 1px;
  font-weight: bold;
  font-size: 11px;
  border-bottom: 1px solid #a4a4a4;
}

.testbed-legend > .node-state {
  display: table;
  font-size: 10px;
  padding: 2px;
}

.testbed-legend > .node-state > span{
  margin-left: 5px;
}

.testbed {  
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  background-origin: content-box;
  width: 600px;
  height: 600px;
}

.node {
  text-align: center;
  color: white;
  position: relative;
  width: 20px;
  height: 20px;
  background-color: gray;
  float:left;
<% if selectable and (params[:c] == "experiments" and params[:a] == "new")%>
  visibility: hidden;
<% elsif selectable %>
  opacity: 0.9;
<% end %>
}

.node-highlight {
  opacity: 0.5;
  margin: -2px;
  border: 2px solid black;
}

.off {
  background-color: #ff6347;
}

.run {
  background-color: #32cd32;
}
.on {
  background-color:  #ffd700;
}
<% if selectable and (params[:c] == "experiments" and params[:a] == "new")%>
.available {
  opacity: 1;
  visibility: visible;
  cursor:pointer;
}

.available:hover {
  opacity: 1;
  cursor: pointer;
  border: 2px solid #2e2e2e;
  margin: -2px;
}

.node-active {
  opacity: 1;
  margin: -2px;
  border: 2px solid black;
}

<% elsif selectable %>
.node:hover {
  opacity: 1;
  cursor: pointer;
  border: 2px solid #2e2e2e;
  margin: -2px;
}

.node-active {
  opacity: 1;
  margin: -2px;
  border: 2px solid black;
}
<% end %>
<% if toggleable %>
.node-selected {
  opacity: 1;
  margin: -2px;
  border: 2px solid black;
}
<% end %>
